{
    "version": 2,
    "builds": [
        {
            "src": "server/package.json",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "server/prisma/**"
                ]
            }
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/src/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}