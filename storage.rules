rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Regras para uploads de extratos bancários
    match /extratos/{userId}/{budgetId}/{fileName} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId &&
        resource.size < 50 * 1024 * 1024; // Máximo 50MB
    }
    
    // Regras para arquivos temporários de processamento
    match /temp/{userId}/{fileName} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId &&
        resource.size < 10 * 1024 * 1024; // Máximo 10MB
    }
    
    // Regras para avatars de usuário (futuro)
    match /avatars/{userId}/{fileName} {
      allow read: if true; // Avatars são públicos
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        resource.size < 2 * 1024 * 1024; // Máximo 2MB
    }
  }
}